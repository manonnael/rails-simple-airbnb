  <div class="container">
  <h1>All of our flats (<%=@flats.count %>)</h1>
  <%= link_to "Create a new flat", new_flat_path, class:"btn btn-primary"%>
  <div class="row">
      <ul>
        <% @flats.each do |flat| %>
        <div class="col">
          <div class="card m-4">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.description %></p>
            <h5 class="card-title"><%= flat.price_per_night %></h5>
            <h5 class="card-title"><%= flat.number_of_guests %></h5>
            <%= link_to "View More", flat_path(flat), class:"card-link"%>
          </div>
          </div>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
